{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen px-8 py-8">
        <div class="pixel-box w-full max-w-xs">
            <div class="p-6">
                <h1 class="text-3xl font-bold text-center mb-8 text-p-dark">REGISTER</h1>

                {% if form_errors(registrationForm) %}
                    <div class="pixel-box bg-red-200 border-4 border-red-600 p-4 mb-6">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
                    <div>
                        <label for="registration_form_type_email" class="block text-p-dark font-bold mb-2">EMAIL</label>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'pixel-input w-full'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div>
                        <label for="registration_form_type_plainPassword" class="block text-p-dark font-bold mb-2">PASSWORD</label>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'pixel-input w-full'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="pixel-box bg-p-pale p-4">
                        <label for="registration_form_type_agreeTerms" class="flex items-center cursor-pointer">
                            <input type="checkbox" id="registration_form_type_agreeTerms" name="registration_form_type[agreeTerms]" value="1" class="pixel-checkbox">
                            <span class="text-p-dark font-bold ml-3">I agree to the terms</span>
                        </label>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="pixel-btn">REGISTER</button>
                    </div>
                {{ form_end(registrationForm) }}

                <div class="text-center mt-6">
                    <p class="text-sm text-p-dark mb-2">Already have an account?</p>
                    <a href="{{ path('app_login') }}" class="pixel-btn text-sm">
                        LOG IN HERE
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
