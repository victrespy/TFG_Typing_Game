{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen px-8">
        <div class="pixel-box w-full max-w-xs">
            <div class="p-6">
                <h1 class="text-3xl font-bold text-center mb-8 text-p-dark">LOG IN</h1>

                <form method="post" class="space-y-4">
                    {% if error %}
                        <div class="pixel-box bg-red-200 border-4 border-red-600 p-4">
                            <p class="text-red-800 text-sm">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="pixel-box bg-yellow-100 p-4 mb-4">
                            <p class="text-sm text-p-dark mb-2">Logged in as: <strong>{{ app.user.userIdentifier }}</strong></p>
                            <a href="{{ logout_path() }}" class="pixel-btn text-sm">Logout</a>
                        </div>
                    {% endif %}

                    <div>
                        <label for="username" class="block text-p-dark font-bold mb-2">EMAIL</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="pixel-input w-full" autocomplete="email" required autofocus>
                    </div>

                    <div>
                        <label for="password" class="block text-p-dark font-bold mb-2">PASSWORD</label>
                        <input type="password" name="_password" id="password" class="pixel-input bg-p-light w-full" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                    <div class="text-center">
                        <button class="pixel-btn" type="submit">
                            SIGN IN
                        </button>
                    </div>

                    <div class="text-center mt-6">
                        <p class="text-sm text-p-dark mb-2">Don't have an account?</p>
                        <a href="{{ path('app_register') }}" class="pixel-btn text-sm">
                            REGISTER HERE
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
